# Local Development Environment Configuration Template
# Copy this to local-dev.env and fill in your actual values
# Database runs in Docker, frontend and backend run in shell

# Backend Configuration
export ASPNETCORE_ENVIRONMENT=Development
LISTEN_HOST=localhost
LISTEN_PORT=5001
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=docqueryservice
DB_USERNAME=postgres
DB_PASSWORD=DevPassword123!

# Frontend Configuration
VITE_ENVIRONMENT=development
VITE_API_BASE_URL=http://localhost:5001/api/v3
VITE_ENABLE_METRICS=true

# Honeycomb Configuration (get your API key from https://ui.honeycomb.io/account)
# Frontend RUM Configuration
VITE_HONEYCOMB_API_KEY=your_honeycomb_api_key_here
VITE_HONEYCOMB_DATASET=docquery-frontend

# Backend Telemetry Configuration
HONEYCOMB_API_KEY=your_honeycomb_api_key_here
HONEYCOMB_DATASET=docquery-backend

# Development URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:5001

# Optional: OpenTelemetry for development
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
# OTEL_SERVICE_NAME=docquery-dev
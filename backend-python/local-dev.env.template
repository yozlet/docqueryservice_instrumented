# Python Summarizer Service Configuration
LISTEN_HOST=0.0.0.0
LISTEN_PORT=5002
LISTEN_PORT_HTTPS=443

# SSL Configuration
SSL_KEYFILE=/path/to/your/private.key
SSL_CERTFILE=/path/to/your/certificate.crt
# Optional: SSL version and ciphers configuration
SSL_VERSION=5
SSL_CIPHERS=ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-GCM-SHA256

# CORS Configuration
# React frontend server URL
FRONTEND_URL=http://localhost:3000

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here  # Required for Claude models
MAX_TOKENS=500

# Database Configuration
DATABASE_URL=postgresql://postgres:DevPassword123!@localhost:5432/docqueryservice
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=docqueryservice
DB_USERNAME=postgres
DB_PASSWORD=DevPassword123!

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=backend-python
OTEL_LOGS_EXPORTER="otlp_proto_http"
OTEL_TRACES_EXPORTER="otlp_proto_http"
OTEL_EXPORTER_OTLP_PROTOCOL="http/protobuf"
OTEL_PYTHON_LOG_CORRELATION=true
OTEL_PYTHON_LOGGING_AUTO_INSTRUMENTATION_ENABLED=true
# in case you need to submit API key
# OTEL_EXPORTER_OTLP_HEADERS="x-honeycomb-team=<HONEYCOMB_API_KEY>"